<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardViewId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/enterprisePhotoId"
            android:layout_width="102dp"
            android:layout_height="94dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enterpriseNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Nome da Empresa"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/enterprisePhotoId"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enterpriseTypeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Tipo da Empresa"
            android:textColor="@color/gray"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/enterprisePhotoId"
            app:layout_constraintTop_toBottomOf="@+id/enterpriseNameId" />

        <TextView
            android:id="@+id/countryEnterpriseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="PaÃ­s da empresa"
            android:textColor="@color/gray"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/enterprisePhotoId"
            app:layout_constraintTop_toBottomOf="@+id/enterpriseTypeId" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>